root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 8
insert_final_newline = true
trim_trailing_whitespace = true

[*.bin]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{c,h,lua}]
indent_style = space
max_line_length = 100

[*.{md,rs}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
